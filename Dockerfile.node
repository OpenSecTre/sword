FROM 			node:6.2.2

MAINTAINER 		Mika Turunen <mika.turunen@ymail.com>

RUN 			mkdir -p /usr/src/app
WORKDIR 		/usr/src/app

COPY 			./server/package.json /usr/src/app/package.json
RUN 			npm install
COPY 			./server /usr/src/app

EXPOSE 			3000

#				NOTE: update to later docker-compose + docker version to support docker-compose build arguments
ENV				MONGODB=mongodb://sword-mongo-database:27017/sword

RUN				ls /usr/src/app
CMD 			[ "npm", "start" ]
